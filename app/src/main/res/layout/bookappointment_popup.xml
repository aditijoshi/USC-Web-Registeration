<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_date_selection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Time Slot"
    android:layout_centerHorizontal="true"
    android:textColor="#000"
    android:textSize="16sp"
    android:layout_below="@+id/tv_date_selection"
    android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/sp_time_slot"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:entries="@array/timeslotvalue"
        android:spinnerMode="dialog"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/bt_book_advisor_appointment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_time_slot"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_signin"
        android:text="Book Appointment"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/bt_cancel_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_book_advisor_appointment"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Go Back"
        android:textColor="#0000ff"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>

